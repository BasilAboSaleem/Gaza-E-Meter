<!doctype html>
<html lang="ar" dir="rtl">
<%- include('../../partials/head') %>

<body class="rtl">

<div id="loading">
    <div class="loader simple-loader">
        <div class="loader-body"></div>
    </div>
</div>

<%- include('../../partials/sidebar') %>

<main class="main-content">

<div class="position-relative iq-banner">

    <%- include('../../partials/navbar') %>

    <!-- ===== Page Header ===== -->
    <div class="iq-navbar-header" style="height:220px;">
        <div class="container-fluid iq-container">
            <div class="row">
                <div class="col-md-12">

                    <div class="card bg-primary bg-gradient shadow-none rounded-4 mb-0">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center flex-wrap">

                                <div>
                                    <h2 class="fw-bold text-white mb-2">
                                        سجل الدفعات
                                    </h2>
                                    <p class="mb-0 text-white-75">
                                        جميع الدفعات التي قمت بها
                                    </p>
                                </div>

                                <div class="mt-3 mt-md-0">
                                    <span class="badge bg-white text-primary rounded-pill px-3 py-2">
                                        <%= payments.length %> دفعة
                                    </span>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

<!-- ===== Content ===== -->
<div class="container-fluid content-inner mt-n5 py-0">
    <div class="row">

        <div class="col-12">
            <div class="card rounded-4 shadow-sm">

                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-primary">
                        قائمة الدفعات
                    </h5>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table align-middle table-striped mb-0" id="paymentsTable">
                            <thead class="bg-soft-light text-primary">
                                <tr>
                                    <th>رقم السند / الإيصال</th>
                                    <th>تاريخ الدفع</th>
                                    <th>المبلغ المدفوع</th>
                                    <th>مسددة عن فاتورة</th>
                                    <th>طريقة الدفع</th>
                                </tr>
                            </thead>
                            <tbody>

                                <% payments.forEach(payment=> { %>
                                    <tr>
                                        <td class="fw-bold text-primary">
                                            <%= payment.receiptNumber || '-' %>
                                        </td>

                                        <td>
                                            <%= new Date(payment.paymentDate).toLocaleDateString('ar-EG') %>
                                        </td>

                                        <td class="fw-bold text-success">
                                            <%= payment.amount %> ₪
                                        </td>

                                        <td class="text-muted">
                                            #<%= payment.invoice.invoiceNumber %>
                                        </td>

                                        <td>
                                            <% if (payment.paymentMethod==='CASH') { %>
                                                <span class="badge bg-soft-success text-success rounded-pill">
                                                    نقداً
                                                </span>
                                            <% } else if (payment.paymentMethod==='BANK_TRANSFER') { %>
                                                <span class="badge bg-soft-info text-info rounded-pill">
                                                    تحويل بنكي
                                                </span>
                                            <% } else if (payment.paymentMethod==='CHEQUE') { %>
                                                <span class="badge bg-soft-warning text-warning rounded-pill">
                                                    شيك
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-soft-secondary text-secondary rounded-pill">
                                                    <%= payment.paymentMethod %>
                                                </span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>

                                <% if (payments.length===0) { %>
                                    <tr>
                                        <td colspan="5" class="text-center py-5 text-muted">
                                            لا توجد دفعات مسجلة
                                        </td>
                                    </tr>
                                <% } %>

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

<%- include('../../partials/footer') %>

</main>

<%- include('../../partials/scripts') %>

</body>
</html>
