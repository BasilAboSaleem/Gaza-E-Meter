<!doctype html>
<html lang="en" dir="rtl">
<%- include('../../../partials/head.ejs') %>

  <body>
    <!-- loader Start -->
    <div id="loading">
      <div class="loader simple-loader">
        <div class="loader-body"></div>
      </div>
    </div>
    <!-- loader END -->

    <%- include('../../../partials/sidebar.ejs') %>

      <main class="main-content">
        <div class="position-relative iq-banner">
          <!--Nav Start-->
          <%- include('../../../partials/navbar.ejs') %>
            <!--Nav End-->
        </div>

        <div class="conatiner-fluid content-inner mt-n5 py-0">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                  <h4 class="card-title mb-0">قائمة الباقات</h4>
                  <a href="/super-admin/plans/create" class="btn btn-primary btn-sm">إضافة باقة جديدة</a>
                </div>

                <div class="card-body">
                  <% if (plans.length===0) { %>
                    <p>لا توجد باقات بعد.</p>
                    <% } else { %>
                      <div class="table-responsive">
                        <table class="table table-striped table-hover">
                          <thead>
                            <tr>
                              <th>اسم الباقة</th>
                              <th>عدد المشتركين</th>
                              <th>السعر الشهري</th>
                              <th>مميزات الباقة</th>
                              <th>الحالة</th>
                              <th>تاريخ الإنشاء</th>
                              <th>إجراءات</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% plans.forEach(plan=> { %>
                              <tr>
                                <td>
                                  <%= plan.name %>
                                </td>
                                <td>
                                  <%= plan.maxSubscribers===-1 ? 'غير محدود' : plan.maxSubscribers %>
                                </td>
                                <td>₪<%= plan.priceMonthly %>
                                </td>
                                <td>
                                  <% if (plan.features.length===0) { %>
                                    لا توجد مميزات
                                    <% } else { %>
                                      <ul>
                                        <% plan.features.forEach(f=> { %>
                                          <li>
                                            <%= f %>
                                          </li>
                                          <% }) %>
                                      </ul>
                                      <% } %>
                                </td>
                                <td>
                                  <% if (plan.isActive) { %>
                                    <span class="badge bg-success">مفعلة</span>
                                    <% } else { %>
                                      <span class="badge bg-danger">غير مفعلة</span>
                                      <% } %>
                                </td>
                                <td>
                                  <%= new Date(plan.createdAt).toLocaleDateString('ar-EG') %>
                                </td>
                                <td>
                                  <!-- هنا تقدر تضيف أزرار تعديل/حذف -->
                                  <a href="/super-admin/plans/<%= plan._id %>/edit"
                                    class="btn btn-warning btn-sm">تعديل</a>
                                  <button class="btn btn-danger btn-sm delete-btn"
                                    data-id="<%= plan._id %>">حذف</button>
                                </td>
                              </tr>
                              <% }) %>
                          </tbody>
                        </table>
                      </div>
                      <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Footer Section Start -->
        <%- include('../../../partials/footer.ejs') %>
          <!-- Footer Section End -->
      </main>


      <%- include('../../../partials/offcanvas.ejs') %>

        <%- include('../../../partials/offcanvas.ejs') %>
          <%- include('../../../partials/scripts.ejs') %>

            <script>
              // مثال حذف باقة
              document.querySelectorAll('.delete-btn').forEach(btn => {
                btn.addEventListener('click', async () => {
                  if (!confirm('هل أنت متأكد من حذف الباقة؟')) return;
                  const id = btn.dataset.id;

                  try {
                    const res = await fetch('/super-admin/plans/' + id, {
                      method: 'DELETE'
                    });

                    if (res.ok) {
                      location.reload();
                    } else {
                      alert('حدث خطأ أثناء الحذف');
                    }
                  } catch (err) {
                    console.error(err);
                    alert('خطأ في الاتصال بالخادم');
                  }
                });
              });
            </script>

  </body>

</html>