<!doctype html>
<html lang="ar" dir="rtl">
  <%- include('../../../partials/head.ejs') %>
  <body>
    <!-- loader -->
    <div id="loading">
      <div class="loader simple-loader">
        <div class="loader-body"></div>
      </div>
    </div>

    <%- include('../../../partials/sidebar.ejs') %>

    <main class="main-content">
      <div class="position-relative iq-banner">
        <%- include('../../../partials/navbar.ejs') %>
      </div>

      <div class="container-fluid content-inner mt-n5 py-0">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="card-title mb-0">الحركات المالية / التحويلات</h4>
                <a href="/company-admin/transactions/create" class="btn btn-primary btn-sm">
                  ➕ إضافة حركة جديدة
                </a>
              </div>

              <div class="card-body">

                <!-- Search & Filters -->
                <div class="row mb-3">
                  <div class="col-md-3 mb-2">
                    <input
                      type="text"
                      id="transactionSearch"
                      class="form-control"
                      placeholder="ابحث بالوصف..."
                    />
                  </div>

                  <div class="col-md-3 mb-2">
                    <select id="transactionTypeFilter" class="form-select">
                      <option value="">كل الأنواع</option>
                      <option value="COLLECTION">قبض</option>
                      <option value="EXPENSE">صرف</option>
                      <option value="TRANSFER">تحويل بين الصناديق</option>
                      <option value="ADJUSTMENT">رصيد افتتاحي / تعديل</option>
                    </select>
                  </div>

                  <!-- فلتر وارد / صادر -->
                  <div class="col-md-3 mb-2">
                    <select id="transactionDirectionFilter" class="form-select">
                      <option value="">كل الحركات</option>
                      <option value="IN">وارد</option>
                      <option value="OUT">صادر</option>
                    </select>
                  </div>
                </div>

                <% if (transactions.length === 0) { %>
                  <p class="text-muted">لا توجد حركات مالية بعد.</p>
                <% } else { %>

                  <% let runningBalance = 0; %>

                  <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                      <thead class="table-light">
                        <tr>
                          <th>الوصف</th>
                          <th>النوع</th>
                          <th>الحركة</th>
                          <th>الصندوق المصدر</th>
                          <th>الصندوق الوجهة</th>
                          <th>المبلغ</th>
                          <th>الرصيد التراكمي</th>
                          <th>المنفذ</th>
                          <th>التاريخ</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% transactions.forEach(tx => { %>

                          <% 
                            if (tx.direction === 'IN') {
                              runningBalance += tx.amount;
                            } else {
                              runningBalance -= tx.amount;
                            }
                          %>

                          <tr
                            class="transaction-row"
                            data-type="<%= tx.type %>"
                            data-direction="<%= tx.direction %>"
                            data-description="<%= tx.description.toLowerCase() %>"
                          >
                            <!-- الوصف -->
                            <td><%= tx.description %></td>

                            <!-- النوع -->
                            <td>
                              <% if (tx.type === 'COLLECTION') { %>
                                قبض
                              <% } else if (tx.type === 'EXPENSE') { %>
                                صرف
                              <% } else if (tx.type === 'TRANSFER') { %>
                                تحويل
                              <% } else { %>
                                رصيد افتتاحي / تعديل
                              <% } %>
                            </td>

                            <!-- وارد / صادر -->
                            <td>
                              <% if (tx.direction === 'IN') { %>
                                <span class="badge bg-success">وارد</span>
                              <% } else { %>
                                <span class="badge bg-danger">صادر</span>
                              <% } %>
                            </td>

                            <!-- الصندوق المصدر -->
                            <td>
                              <%= tx.sourceFund ? tx.sourceFund.name : '—' %>
                            </td>

                            <!-- الصندوق الوجهة -->
                            <td>
                              <%= tx.destinationFund ? tx.destinationFund.name : '—' %>
                            </td>

                            <!-- المبلغ -->
                            <td>
                              <strong>
                                <%= tx.amount.toLocaleString('ar-EG') %>
                              </strong>
                              <%= tx.fund?.currency || '₪' %>
                            </td>

                            <!-- الرصيد التراكمي -->
                            <td>
                              <span class="<%= runningBalance >= 0 ? 'text-success' : 'text-danger' %> fw-bold">
                                <%= runningBalance.toLocaleString('ar-EG') %>
                              </span>
                              <%= tx.fund?.currency || '₪' %>
                            </td>

                            <!-- المنفذ -->
                            <td>
                              <%= tx.performedBy?.fullName || '—' %>
                            </td>

                            <!-- التاريخ -->
                            <td>
                              <%= new Date(tx.createdAt).toLocaleDateString('ar-EG') %>
                            </td>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                <% } %>

              </div>
            </div>
          </div>
        </div>
      </div>

      <%- include('../../../partials/footer.ejs') %>
    </main>

    <%- include('../../../partials/offcanvas.ejs') %>
    <%- include('../../../partials/scripts.ejs') %>

    <!-- Search & Filter Script -->
    <script>
      const searchInput = document.getElementById('transactionSearch');
      const typeFilter = document.getElementById('transactionTypeFilter');
      const directionFilter = document.getElementById('transactionDirectionFilter');
      const rows = document.querySelectorAll('.transaction-row');

      function filterTransactions() {
        const searchValue = searchInput.value.toLowerCase();
        const selectedType = typeFilter.value;
        const selectedDirection = directionFilter.value;

        rows.forEach(row => {
          const description = row.dataset.description;
          const type = row.dataset.type;
          const direction = row.dataset.direction;

          const matchDescription = description.includes(searchValue);
          const matchType = !selectedType || type === selectedType;
          const matchDirection = !selectedDirection || direction === selectedDirection;

          row.style.display =
            matchDescription && matchType && matchDirection ? '' : 'none';
        });
      }

      searchInput.addEventListener('input', filterTransactions);
      typeFilter.addEventListener('change', filterTransactions);
      directionFilter.addEventListener('change', filterTransactions);
    </script>
  </body>
</html>
