<!doctype html>
<html lang="en" dir="rtl">
  <%- include('../../../partials/head.ejs') %>
  <body>

    <!-- Loader -->
    <div id="loading">
      <div class="loader simple-loader">
        <div class="loader-body"></div>
      </div>
    </div>

    <%- include('../../../partials/sidebar.ejs') %>

    <main class="main-content">
      <div class="position-relative iq-banner">
        <%- include('../../../partials/navbar.ejs') %>
      </div>

      <div class="container-fluid content-inner mt-n5 py-0">
        <div class="row">
          <div class="col-lg-6 mx-auto">
            <div class="card">

              <!-- Header -->
              <div class="card-header">
                <h4 class="card-title mb-1">
                  تعديل
                  <%= area.parentArea ? 'منطقة فرعية' : 'منطقة رئيسية' %>
                </h4>
                <p class="text-muted mb-0">
                  قم بتعديل بيانات المنطقة ثم احفظ التغييرات
                </p>
              </div>

              <!-- Body -->
              <div class="card-body">
                <form id="areaForm">

                  <!-- Name -->
                  <div class="mb-3">
                    <label class="form-label">اسم المنطقة</label>
                    <input
                      type="text"
                      id="areaName"
                      class="form-control"
                      value="<%= area.name %>"
                      required
                    />
                    <div class="text-danger small mt-1 error-name"></div>
                  </div>

                  <!-- Description -->
                  <div class="mb-3">
                    <label class="form-label">وصف المنطقة (اختياري)</label>
                    <textarea
                      id="areaDescription"
                      class="form-control"
                      rows="3"
                    ><%= area.description || '' %></textarea>
                    <div class="text-danger small mt-1 error-description"></div>
                  </div>

                  <!-- Active -->
                  <div class="mb-4">
                    <label class="form-label d-block">حالة المنطقة</label>
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="areaActive"
                        <%= area.isActive ? 'checked' : '' %>
                      >
                      <label class="form-check-label">مفعّلة</label>
                    </div>
                  </div>

                  <!-- Buttons -->
                  <div class="d-flex justify-content-end gap-2">
                    <a
                      href="<%= area.parentArea
                        ? `/company-admin/main-areas/${area.parentArea}`
                        : '/company-admin/main-areas'
                      %>"
                      class="btn btn-light"
                    >
                      رجوع
                    </a>

                    <button type="submit" class="btn btn-primary">
                      حفظ التعديلات
                    </button>
                  </div>

                </form>
              </div>

            </div>
          </div>
        </div>
      </div>

      <%- include('../../../partials/footer.ejs') %>
    </main>

    <%- include('../../../partials/offcanvas.ejs') %>
    <%- include('../../../partials/scripts.ejs') %>

    <script>
      const areaForm = document.getElementById('areaForm');

      function clearErrors() {
        document.querySelectorAll('[class^="error-"]').forEach(el => el.innerText = '');
      }

      function showErrors(errors) {
        Object.keys(errors).forEach(key => {
          const el = document.querySelector('.error-' + key);
          if (el) el.innerText = errors[key];
        });
      }

      areaForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        clearErrors();

        const data = {
          name: document.getElementById('areaName').value.trim(),
          description: document.getElementById('areaDescription').value.trim(),
          isActive: document.getElementById('areaActive').checked
        };

        try {
          const response = await fetch(
            '/company-admin/areas/<%= area._id %>',
            {
              method: 'PUT',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(data)
            }
          );

          const result = await response.json();

          if (response.ok) {
            window.location.href =
              '<%= area.parentArea
                ? `/company-admin/main-areas/${area.parentArea}`
                : '/company-admin/main-areas'
              %>';
            return;
          }

          if (result.errors) {
            showErrors(result.errors);
          } else {
            alert(result.message || 'حدث خطأ أثناء التعديل');
          }

        } catch (err) {
          console.error(err);
          alert('خطأ في الاتصال بالخادم');
        }
      });
    </script>

  </body>
</html>
