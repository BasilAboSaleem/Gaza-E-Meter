<!doctype html>
<html lang="en" dir="rtl">
<%- include('../../../partials/head.ejs') %>

    <body>
        <!-- loader Start -->
        <div id="loading">
            <div class="loader simple-loader">
                <div class="loader-body"></div>
            </div>
        </div>
        <!-- loader END -->

        <%- include('../../../partials/sidebar.ejs') %>

            <main class="main-content">
                <div class="position-relative iq-banner">
                    <%- include('../../../partials/navbar.ejs') %>
                </div>

                <div class="container-fluid content-inner mt-n5 py-0">
                    <div class="row">
                        <div class="col-12">
                            <!-- Header Section -->
                            <div class="card mb-3">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <div>
                                        <h4 class="mb-1">ملف المحصل: <%= collector.fullName %>
                                        </h4>
                                        <p class="mb-0">البريد الإلكتروني: <%= collector.email || '-' %> | الجوال: <%=
                                                    collector.phone %>
                                        </p>
                                        <p class="mb-0">تاريخ الانضمام: <%= new
                                                Date(collector.createdAt).toLocaleDateString('ar-EG') %>
                                        </p>
                                    </div>
                                    <div>
                                        <% if (collector.isActive) { %>
                                            <span class="badge bg-success">نشط</span>
                                            <% } else { %>
                                                <span class="badge bg-danger">متوقف</span>
                                                <% } %>
                                    </div>
                                </div>
                            </div>

                            <!-- Summary Cards -->
                            <div class="row mb-3">
                                <div class="col-md-3 col-sm-6 mb-2">
                                    <div class="card text-center">
                                        <div class="card-body">
                                            <h6>رصيد الصندوق الحالي</h6>
                                            <h5 class="text-primary">
                                                <%= fund ? fund.balance.toFixed(2) : 0 %> شيكل
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6 mb-2">
                                    <div class="card text-center">
                                        <div class="card-body">
                                            <h6>إجمالي التحصيل</h6>
                                            <h5 class="text-success">
                                                <%= stats.totalCollected.toFixed(2) %> شيكل
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6 mb-2">
                                    <div class="card text-center">
                                        <div class="card-body">
                                            <h6>عدد القراءات المنفذة</h6>
                                            <h5>
                                                <%= stats.readingsCount %> قراءة
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6 mb-2">
                                    <div class="card text-center">
                                        <div class="card-body">
                                            <h6>المشتركين التابعين</h6>
                                            <h5>
                                                <%= subscribers.length %> مشترك
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Tabs Section -->
                            <div class="card">
                                <div class="card-body">
                                    <ul class="nav nav-tabs" id="collectorTabs" role="tablist">
                                        <li class="nav-item" role="presentation">
                                            <button class="nav-link active" id="subscribers-tab" data-bs-toggle="tab"
                                                data-bs-target="#subscribers" type="button" role="tab">المشتركين المسؤول
                                                عنهم</button>
                                        </li>
                                        <li class="nav-item" role="presentation">
                                            <button class="nav-link" id="transactions-tab" data-bs-toggle="tab"
                                                data-bs-target="#transactions" type="button" role="tab">آخر حركات
                                                الصندوق</button>
                                        </li>
                                    </ul>

                                    <div class="tab-content mt-3">
                                        <!-- Subscribers -->
                                        <div class="tab-pane fade show active" id="subscribers" role="tabpanel">
                                            <div class="table-responsive">
                                                <table class="table table-striped table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>الاسم</th>
                                                            <th>المنطقة</th>
                                                            <th>رقم الهاتف</th>
                                                            <th>إجراءات</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% subscribers.forEach(s=> { %>
                                                            <tr>
                                                                <td>
                                                                    <%= s.fullName %>
                                                                </td>
                                                                <td>
                                                                    <%= s.primaryArea ? s.primaryArea.name : '-' %>
                                                                </td>
                                                                <td>
                                                                    <%= s.phone %>
                                                                </td>
                                                                <td>
                                                                    <a href="/company-admin/subscribers/<%= s._id %>"
                                                                        class="btn btn-info btn-sm">عرض</a>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>

                                        <!-- Transactions -->
                                        <div class="tab-pane fade" id="transactions" role="tabpanel">
                                            <div class="table-responsive">
                                                <table class="table table-striped table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>التاريخ</th>
                                                            <th>النوع</th>
                                                            <th>القيمة</th>
                                                            <th>الوصف</th>
                                                            <th>الحالة</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% transactions.forEach(t=> { %>
                                                            <tr>
                                                                <td>
                                                                    <%= new Date(t.createdAt).toLocaleString('ar-EG') %>
                                                                </td>
                                                                <td>
                                                                    <% if (t.type==='COLLECTION' ) { %>
                                                                        <span class="badge bg-success">تحصيل
                                                                            فواتير</span>
                                                                        <% } else if (t.type==='TRANSFER' ) { %>
                                                                            <span class="badge bg-info">تحويل
                                                                                أموال</span>
                                                                            <% } else { %>
                                                                                <span class="badge bg-secondary">
                                                                                    <%= t.type %>
                                                                                </span>
                                                                                <% } %>
                                                                </td>
                                                                <td>
                                                                    <span
                                                                        class="<%= t.direction === 'IN' ? 'text-success' : 'text-danger' %>">
                                                                        <%= t.direction==='IN' ? '+' : '-' %>
                                                                            <%= t.amount.toFixed(2) %>
                                                                    </span>
                                                                </td>
                                                                <td>
                                                                    <%= t.description %>
                                                                </td>
                                                                <td>
                                                                    <%= t.direction==='IN' ? 'وارد' : 'صادر' %>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <%- include('../../../partials/footer.ejs') %>
            </main>

            <%- include('../../../partials/offcanvas.ejs') %>
                <%- include('../../../partials/scripts.ejs') %>
    </body>

</html>