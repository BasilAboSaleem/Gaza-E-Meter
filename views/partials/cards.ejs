<div class="row">
   <!-- ملخص إحصاءات اليوم لمدير الشركة -->
   <% if (user.role==='COMPANY_ADMIN' && typeof stats !=='undefined' && stats) { %>
      <div class="col-md-12 col-lg-12">
         <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4">
            <!-- المشتركين -->
            <div class="col">
               <div class="card card-slide mb-4 shadow-sm border-0">
                  <div class="card-body">
                     <div class="progress-widget d-flex align-items-center">
                        <div class="iq-icon-box bg-soft-primary rounded-pill p-3 me-3">
                           <svg width="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path fill-rule="evenodd" clip-rule="evenodd"
                                 d="M11.9849 15.3462C8.11731 15.3462 4.81445 15.931 4.81445 18.2735C4.81445 20.616 8.11731 21.2008 11.9849 21.2008C15.8525 21.2008 19.1554 20.616 19.1554 18.2735C19.1554 15.931 15.8525 15.3462 11.9849 15.3462Z"
                                 stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                                 stroke-linejoin="round"></path>
                              <path fill-rule="evenodd" clip-rule="evenodd"
                                 d="M11.9849 12.0059C14.523 12.0059 16.5801 9.94779 16.5801 7.40976C16.5801 4.87173 14.523 2.81454 11.9849 2.81454C9.44688 2.81454 7.38974 4.87173 7.38974 7.40976C7.38974 9.94779 9.44688 12.0059 11.9849 12.0059Z"
                                 stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                                 stroke-linejoin="round"></path>
                           </svg>
                        </div>
                        <div class="progress-detail">
                           <p class="mb-1 text-secondary small">إجمالي المشتركين</p>
                           <h4 class="counter fw-bold text-primary mb-0">
                              <%= stats.totalSubscribers %>
                           </h4>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
            <!-- المناطق -->
            <div class="col">
               <div class="card card-slide mb-4 shadow-sm border-0">
                  <div class="card-body">
                     <div class="progress-widget d-flex align-items-center">
                        <div class="iq-icon-box bg-soft-info rounded-pill p-3 me-3">
                           <svg width="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path fill-rule="evenodd" clip-rule="evenodd"
                                 d="M12.0001 22.0002C12.0001 22.0002 4.5 15.5002 4.5 10.0002C4.5 5.85807 7.85786 2.50024 12.0001 2.50024C16.1422 2.50024 19.5001 5.85807 19.5001 10.0002C19.5001 15.5002 12.0001 22.0002 12.0001 22.0002Z"
                                 stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                                 stroke-linejoin="round"></path>
                              <circle cx="12.0001" cy="10.0001" r="2.5" stroke="currentColor" stroke-width="1.5"
                                 stroke-linecap="round" stroke-linejoin="round"></circle>
                           </svg>
                        </div>
                        <div class="progress-detail">
                           <p class="mb-1 text-secondary small">المناطق المغطاة</p>
                           <h4 class="counter fw-bold text-info mb-0">
                              <%= stats.totalAreas %>
                           </h4>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
            <!-- المحصلين -->
            <div class="col">
               <div class="card card-slide mb-4 shadow-sm border-0">
                  <div class="card-body">
                     <div class="progress-widget d-flex align-items-center">
                        <div class="iq-icon-box bg-soft-success rounded-pill p-3 me-3">
                           <svg width="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path
                                 d="M17.8427 15.8734C17.3427 15.4214 16.3127 15.0004 15.0007 15.0004C13.6887 15.0004 12.6587 15.4214 12.1587 15.8734C11.7487 16.2434 11.5157 16.7534 11.5157 17.2944V19.0004H18.4847V17.2944C18.4847 16.7534 18.2527 16.2434 17.8427 15.8734Z"
                                 stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                                 stroke-linejoin="round"></path>
                              <path
                                 d="M15.0002 12.5001C16.1048 12.5001 17.0002 11.6047 17.0002 10.5001C17.0002 9.39553 16.1048 8.50012 15.0002 8.50012C13.8956 8.50012 13.0002 9.39553 13.0002 10.5001C13.0002 11.6047 13.8956 12.5001 15.0002 12.5001Z"
                                 stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                                 stroke-linejoin="round"></path>
                              <path
                                 d="M9.5155 19.0004H5.5155V17.2944C5.5155 16.7534 5.7485 16.2434 6.1585 15.8734C6.6585 15.4214 7.6885 15.0004 9.0005 15.0004"
                                 stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                                 stroke-linejoin="round"></path>
                              <path
                                 d="M9.0005 12.5001C10.1051 12.5001 11.0005 11.6047 11.0005 10.5001C11.0005 9.39553 10.1051 8.50012 9.0005 8.50012C7.89593 8.50012 7.00052 9.39553 7.00052 10.5001C7.00052 11.6047 7.89593 12.5001 9.0005 12.5001Z"
                                 stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                                 stroke-linejoin="round"></path>
                              <path
                                 d="M12.0002 21.2008C17.0815 21.2008 21.2002 17.0821 21.2002 12.0008C21.2002 6.91953 17.0815 2.80078 12.0002 2.80078C6.91896 2.80078 2.80023 6.91953 2.80023 12.0008C2.80023 17.0821 6.91896 21.2008 12.0002 21.2008Z"
                                 stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                                 stroke-linejoin="round"></path>
                           </svg>
                        </div>
                        <div class="progress-detail">
                           <p class="mb-1 text-secondary small">عدد المحصلين</p>
                           <h4 class="counter fw-bold text-success mb-0">
                              <%= stats.totalCollectors %>
                           </h4>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
            <!-- الاستهلاك -->
            <div class="col">
               <div class="card card-slide mb-4 shadow-sm border-0">
                  <div class="card-body">
                     <div class="progress-widget d-flex align-items-center">
                        <div class="iq-icon-box bg-soft-warning rounded-pill p-3 me-3">
                           <svg width="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path fill-rule="evenodd" clip-rule="evenodd"
                                 d="M12 21.0002L13.784 12.3332H18.667L12 3.00024L10.216 11.6672H5.33398L12 21.0002Z"
                                 stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                                 stroke-linejoin="round"></path>
                           </svg>
                        </div>
                        <div class="progress-detail">
                           <p class="mb-1 text-secondary small">استهلاك اليوم</p>
                           <h4 class="counter fw-bold text-warning mb-0">
                              <%= stats.totalConsumptionToday %> <small>KW</small>
                           </h4>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>

      <!-- إحصائيات مالية -->
      <div class="col-md-12 col-lg-8">
         <div class="card shadow-sm border-0">
            <div class="card-header border-0 pb-0 d-flex justify-content-between">
               <div class="header-title">
                  <h4 class="card-title fw-bold">إحصاءات النشاط اليومي</h4>
                  <p class="mb-0 text-muted">رؤية شاملة للقراءات والتحصيل المالي لهذا اليوم</p>
               </div>
            </div>
            <div class="card-body">
               <div class="row text-center mt-2">
                  <div class="col-md-4">
                     <div class="p-4 border-0 rounded bg-soft-primary mb-3">
                        <div class="mb-2">
                           <svg width="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"
                              class="text-primary">
                              <path d="M12 11V16" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                                 stroke-linejoin="round"></path>
                              <path d="M12 8.00195V8.01195" stroke="currentColor" stroke-width="1.5"
                                 stroke-linecap="round" stroke-linejoin="round"></path>
                              <path fill-rule="evenodd" clip-rule="evenodd"
                                 d="M12 21C16.9706 21 21 16.9706 21 12C21 7.02944 16.9706 3 12 3C7.02944 3 3 7.02944 3 12C3 16.9706 7.02944 21 12 21Z"
                                 stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                                 stroke-linejoin="round"></path>
                           </svg>
                        </div>
                        <h6 class="text-secondary fw-bold">قراءات اليوم</h6>
                        <h2 class="text-primary mt-1 fw-black">
                           <%= stats.readingsToday %>
                        </h2>
                     </div>
                  </div>
                  <div class="col-md-4">
                     <div class="p-4 border-0 rounded bg-soft-info mb-3">
                        <div class="mb-2">
                           <svg width="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"
                              class="text-info">
                              <path d="M9 11H12V14H9V11Z" stroke="currentColor" stroke-width="1.5"
                                 stroke-linecap="round" stroke-linejoin="round"></path>
                              <path
                                 d="M12 18H7.8C6.69543 18 5.8 17.1046 5.8 16V4C5.8 2.89543 6.69543 2 7.8 2H13.2C13.5183 2 13.8235 2.12643 14.0485 2.35147L17.8485 6.15147C18.0736 6.37652 18.2 6.68174 18.2 7V16C18.2 17.1046 17.3046 18 16.2 18H15"
                                 stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                                 stroke-linejoin="round"></path>
                              <path d="M14 2V5.4C14 6.28366 14.7163 7 15.6 7H19" stroke="currentColor"
                                 stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                           </svg>
                        </div>
                        <h6 class="text-secondary fw-bold">فواتير اليوم</h6>
                        <h2 class="text-info mt-1 fw-black">
                           <%= stats.invoicesToday %>
                        </h2>
                     </div>
                  </div>
                  <div class="col-md-4">
                     <div class="p-4 border-0 rounded bg-soft-success mb-3">
                        <div class="mb-2">
                           <svg width="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"
                              class="text-success">
                              <path d="M8 12L11 15L16 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                                 stroke-linejoin="round"></path>
                              <path fill-rule="evenodd" clip-rule="evenodd"
                                 d="M12 21C16.9706 21 21 16.9706 21 12C21 7.02944 16.9706 3 12 3C7.02944 3 3 7.02944 3 12C3 16.9706 7.02944 21 12 21Z"
                                 stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                                 stroke-linejoin="round"></path>
                           </svg>
                        </div>
                        <h6 class="text-secondary fw-bold">نسبة التحصيل</h6>
                        <h2 class="text-success mt-1 fw-black">
                           <%= stats.collectionRatio %>%
                        </h2>
                     </div>
                  </div>
               </div>
               <div class="mt-4 px-2">
                  <div class="progress" style="height: 12px; border-radius: 10px;">
                     <div class="progress-bar bg-success" role="progressbar"
                        style="width: <%= stats.collectionRatio %>%" aria-valuenow="<%= stats.collectionRatio %>"
                        aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
                  <p class="mt-3 text-center text-muted fw-bold">إجمالي المبالغ المفوترة: <span class="text-dark">
                        <%= stats.totalInvoicedAmount.toLocaleString() %> شيكل
                     </span></p>
               </div>
            </div>
         </div>
      </div>

      <div class="col-md-12 col-lg-4">
         <div class="card shadow-sm border-0 h-100">
            <div class="card-header border-0 pb-0">
               <h4 class="card-title fw-bold">روابط سريعة</h4>
            </div>
            <div class="card-body">
               <div class="d-grid gap-3">
                  <a href="/company-admin/invoices"
                     class="btn btn-primary-soft-gradient py-3 d-flex align-items-center justify-content-center">
                     <svg width="20" class="me-2" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path
                           d="M13 2H6C5.46957 2 4.96086 2.21071 4.58579 2.58579C4.21071 2.96086 4 3.46957 4 4V20C4 20.5304 4.21071 21.0391 4.58579 21.4142C4.96086 21.7893 5.46957 22 6 22H18C18.5304 22 19.0391 21.7893 19.4142 21.4142C19.7893 21.0391 20 20.5304 20 20V9L13 2Z"
                           stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        <path d="M13 2V9H20" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                           stroke-linejoin="round"></path>
                     </svg>
                     إدارة الفواتير
                  </a>
                  <a href="/company-admin/collectors"
                     class="btn btn-info-soft-gradient py-3 d-flex align-items-center justify-content-center">
                     <svg width="20" class="me-2" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path
                           d="M17 21V19C17 17.9391 16.5786 16.9217 15.8284 16.1716C15.0783 15.4214 14.0609 15 13 15H5C3.93913 15 2.92172 15.4214 2.17157 16.1716C1.42143 16.9217 1 17.9391 1 19V21"
                           stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        <circle cx="9" cy="7" r="4" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                           stroke-linejoin="round"></circle>
                        <path
                           d="M23 21V19C22.9993 18.1137 22.7044 17.2524 22.1614 16.5523C21.6184 15.8522 20.8581 15.3516 20 15.13"
                           stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        <path
                           d="M16 3.13C16.8604 3.35031 17.623 3.85071 18.1676 4.55232C18.7122 5.25392 19.0078 6.11774 19.0078 7.005C19.0078 7.89226 18.7122 8.75608 18.1676 9.45768C17.623 10.1593 16.8604 10.6597 16 10.88"
                           stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                     </svg>
                     أداء المحصلين
                  </a>
                  <a href="/company-admin/reports"
                     class="btn btn-success-soft-gradient py-3 d-flex align-items-center justify-content-center">
                     <svg width="20" class="me-2" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path
                           d="M16 21V19C16 17.9391 15.5786 16.9217 14.8284 16.1716C14.0783 15.4214 13.0609 15 12 15H5C3.93913 15 2.92172 15.4214 2.17157 16.1716C1.42143 16.9217 1 17.9391 1 19V21"
                           stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        <circle cx="8.5" cy="7" r="4" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                           stroke-linejoin="round"></circle>
                        <polyline points="17 11 19 13 23 9" stroke="currentColor" stroke-width="2"
                           stroke-linecap="round" stroke-linejoin="round"></polyline>
                     </svg>
                     التقارير التفصيلية
                  </a>
               </div>
            </div>
         </div>
      </div>

      <style>
         .bg-soft-primary {
            background-color: rgba(58, 138, 255, 0.1);
            color: #3a8aff;
         }

         .bg-soft-info {
            background-color: rgba(1, 173, 221, 0.1);
            color: #01addd;
         }

         .bg-soft-success {
            background-color: rgba(5, 193, 133, 0.1);
            color: #05c185;
         }

         .bg-soft-warning {
            background-color: rgba(243, 156, 18, 0.1);
            color: #f39c12;
         }

         .fw-black {
            font-weight: 900;
         }

         .btn-primary-soft-gradient {
            border: 1px solid #3a8aff;
            color: #3a8aff;
            transition: all 0.3s ease;
            border-radius: 12px;
            font-weight: 600;
         }

         .btn-primary-soft-gradient:hover {
            background: #3a8aff;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(58, 138, 255, 0.2);
         }

         .btn-info-soft-gradient {
            border: 1px solid #01addd;
            color: #01addd;
            transition: all 0.3s ease;
            border-radius: 12px;
            font-weight: 600;
         }

         .btn-info-soft-gradient:hover {
            background: #01addd;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(1, 173, 221, 0.2);
         }

         .btn-success-soft-gradient {
            border: 1px solid #05c185;
            color: #05c185;
            transition: all 0.3s ease;
            border-radius: 12px;
            font-weight: 600;
         }

         .btn-success-soft-gradient:hover {
            background: #05c185;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(5, 193, 133, 0.2);
         }
      </style>

      <% } else { %>
         <!-- Default/Placeholder view for other roles or missing stats -->
         <div class="col-md-12">
            <div class="card shadow-sm border-0">
               <div class="card-body text-center py-5">
                  <div class="mb-4">
                     <svg width="80" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="50" cy="50" r="40" stroke="#004e92" stroke-width="2" stroke-dasharray="10 5" />
                        <path
                           d="M50 20V30M50 70V80M20 50H30M70 50H80M28.8 28.8L35.9 35.9M64.1 64.1L71.2 71.2M28.8 71.2L35.9 64.1M64.1 28.8L71.2 35.9"
                           stroke="#f39c12" stroke-width="4" stroke-linecap="round" />
                        <circle cx="50" cy="50" r="15" fill="#f39c12" />
                     </svg>
                  </div>
                  <h3 class="fw-bold text-primary">أهلاً بك في نظام إشراق</h3>
                  <p class="text-secondary lead">يرجى الاختيار من القائمة الجانبية للبدء بالعمل وإدارة نظامك بنور وأمان.
                  </p>
               </div>
            </div>
         </div>
         <% } %>
</div>